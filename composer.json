{
  "name": "laravel/laravel",
  "description": "The Laravel Framework.",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "type": "project",

  "repositories": [
    {"type": "vcs", "url": "https://github.com/humweb/modules"},
    {"type": "vcs", "url": "https://github.com/humweb/core-module"},
    {"type": "vcs", "url": "https://github.com/humweb/theme-manager"},
    {"type": "vcs", "url": "https://github.com/humweb/auth-module"},
    {"type": "vcs", "url": "https://github.com/humweb/pages-module"},
    {"type": "vcs", "url": "https://github.com/humweb/tags-module"},
    {"type": "vcs", "url": "https://github.com/humweb/html-module"},
    {"type": "vcs", "url": "https://github.com/humweb/settings-module"},
    {"type": "vcs", "url": "https://github.com/humweb/menus-module"},
    {"type": "vcs", "url": "https://github.com/humweb/categories-module"}
  ],

  "require": {
    "php": ">=5.6.4",
    "laravel/framework": "5.3.*",
    "laravelcollective/html": "5.*",
    "gazsp/baum": "^1.1",
    "humweb/modules": "dev-master",
    "humweb/theme-manager": "dev-master",
    "humweb/core-module": "dev-master",
    "humweb/auth-module": "dev-master",
    "humweb/pages-module": "dev-master",
    "humweb/tags-module": "dev-master",
    "humweb/html-module": "dev-master",
    "humweb/settings-module": "dev-master",
    "humweb/menus-module": "dev-master",
    "humweb/categories-module": "dev-master",
    "barryvdh/laravel-debugbar": "^2.3"
  },
  "require-dev": {
    "fzaninotto/faker": "~1.4",
    "mockery/mockery": "0.9.*",
    "phpunit/phpunit": "~5.0",
    "symfony/css-selector": "3.1.*",
    "symfony/dom-crawler": "3.1.*"
  },
  "autoload": {
    "classmap": [
      "database"
    ],
    "psr-4": {
      "App\\": "app/"
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests/TestCase.php"
    ]
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ],
    "post-package-install": [
      "Humweb\\Modules\\ComposerHooks::scanPackageForModules"
    ],
    "post-package-update": [
      "Humweb\\Modules\\ComposerHooks::scanPackageForModules"
    ],
    "post-install-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postInstall",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "Illuminate\\Foundation\\ComposerScripts::postUpdate",
      "php artisan optimize"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
